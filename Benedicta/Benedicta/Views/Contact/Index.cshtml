

@model Benedicta.Models.AddView

@{
    ViewBag.Title = "Benedicta";
}


@foreach (var item in Model.Settings)
{
    <section id="ContactBg"  style="background-image: url(../../Uploads/@item.NavbarPhoto);">
        <div class="container-fluid">
            <div class="row text-center" style="margin-top:200px;">
                <div class="col-12 mb-3">
                    <h1>Contact Us</h1>
                </div>
            </div>
        </div>
    </section>
}
<!-- JOIN US SECTION STARTS -->
<section id="JoinUs">
    <div class="container">
        <div class="row">


            <div class="col-lg-4 text-center">
                <h5>Address</h5>

                @foreach (var item in Model.Settings)
                {
                    <p>@item.Adress</p>

                }

            </div>


            <div class="col-lg-4 text-center">
                <h5>Phones</h5>

                @foreach (var item in Model.Settings)
                {
                    <p>@item.Phone</p>

                }

            </div>


            <div class="col-lg-4 text-center">
                <h5>Join Us</h5>

                @foreach (var item in Model.Settings)
                {
                    <a class="link" href=""><i class="@item.Facebook"></i></a>
                    <a class="link" href=""><i class="@item.Instagram" style="padding-left:22px;"></i></a>
                }

            </div>

        </div>
    </div>
</section>
<!-- JOIN US SECTION ENDS -->
<!-- SEC3 STARTS -->
<section id="Sec3">
    <div class="container">
        <div class="row">
            @foreach (var item in Model.Contacts)
            {
                <div class="col-lg-6">
                    <img src="../../Uploads/@item.Photo" style="width:100%">
                </div>
                <div class="col-lg-6 text-center">
                    <h3>@item.Title</h3>
                    <p style="color:black">
                        @item.Text
                    </p>
                </div>
            }
        </div>
    </div>
</section>
<!-- SEC3 ENDS


<!-- MAP SECTION STARTS -->
<section id="Map">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-lg-6 text-center">
                <div class="mapouter" style="margin-bottom:100px;">
                    <div class="gmap_canvas">
                        <iframe width="1500" height="500" id="gmap_canvas"
                                src="https://maps.google.com/maps?q=baku%20Zakura%20restaurant&t=&z=11&ie=UTF8&iwloc=&output=embed"
                                frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>Google Maps
                        Generator by <a href="https://www.embedgooglemap.net">embedgooglemap.net</a>
                    </div>
                    <style>


                        .mapouter {
                            position: relative;
                            text-align: right;
                            height: 500px;
                            width: 1100px;
                        }

                        .gmap_canvas {
                            overflow: hidden;
                            background: none !important;
                            height: 500px;
                            width: 1100px;
                        }
                    </style>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- MAP SECTION ENDS -->
<!-- QUESTIONS & PARTNERS SECTION STARTS -->
<section id="ReserveTable">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h5>For questions and partnerships</h5>
                <h1>Your Message</h1>
                <hr>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="reserveForm">
                    <form>
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label for="inputEmail4">Name*</label>
                                <input type="Name" class="form-control" id="inputEmail4">
                            </div>
                            <div class="form-group col-md-4">
                                <label for="inputPassword4">Email*</label>
                                <input type="text" class="form-control" id="inputPassword4">
                            </div>
                            <div class="form-group col-md-4">
                                <label for="inputPassword4">Phone*</label>
                                <input type="text" class="form-control" id="inputPassword4">
                            </div>
                            <div class="form-group col-md-12">
                                <label for="exampleFormControlTextarea2">Message</label>
                                <textarea class="form-control rounded-0" id="exampleFormControlTextarea2"
                                          rows="5"></textarea>
                            </div>
                        </div>
                        <button type="submit"
                                style="margin: 0 auto;display:block ;margin-top: 15px; margin-bottom: 80px;"
                                class="showAllMenu">
                            Send Message
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- QUESTIONS & PARTNERS SECTION ENDS -->
